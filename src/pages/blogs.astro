---
import BlogCard from '@components/blog-card.astro';
import Layout from '@layouts/layout.astro';

import js from 'public/images/js.png';
import astro from 'public/images/astro.png'
import csharp from 'public/images/c-sharp.png';
---

<style>
.blog{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  padding: 2em 0 0 0;
  width: 100%;
  margin: 0 auto;
}

h4, p{
    color: var(--secondary-color);
}

h4{
  margin: .5em;
}
</style>

<Layout title='My Blog'>

  <section class="heading"><h1>My <span>Blog</span></h1></section>

  <section class="blog">
    <BlogCard image={js} link='../blogs/image-search'>
      <h4>Creating an image search engine</h4>
    </BlogCard>

    <BlogCard image={astro} link='../blogs/creating-blog'>
      <h4>Creating a blog with Astro</h4>
    </BlogCard>

    <BlogCard image={csharp} link='../blogs/switch-case'>
      <h4>Assigning values to images with a switch case</h4>
    </BlogCard>
  </section>
</Layout>

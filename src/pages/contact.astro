---
import Layout from '@layouts/layout.astro';
---

<style>
  .contact-form {
    width: 100%;
    max-width: fit-content;
    padding: 1rem;
    margin: 0 auto;
  }

  .contact-form label {
    display: inline-block;
    margin: 0.25rem 0;
  }

  .contact-form :is(input, textarea) {
    font-family: sans-serif;
    background-color: var(--secondary-bg-color);
    width: 100%;
    padding: 1.5rem 0.5rem;
    margin-bottom: 1rem;
    border: none;
    border-radius: var(--border-radius);
  }

  .contact-form button {
    font-family: sans-serif;
    font-weight: 500;
    text-transform: uppercase;
    color: var(--primary-color);
    background-color: var(--secondary-bg-color);
    border: none;
    border-radius: var(--border-radius);
    padding: 1.5rem 2rem;
    cursor: pointer;
  }
</style>

<Layout title='Contact'>
  <h1>Contact</h1>

  <section>
    <form
      name='contact'
      method='POST'
      data-netlify='true'
      netlify-honeypot='bot-field'
      class='contact-form'
      autocomplete='on'
    >
      <input type='hidden' name='bot-field' aria-label="Don't fill this out if you're human" />
      <input type='hidden' name='subject' value='Website Contact' aria-label='Website Contact' />

      <label for='name'>Name:</label>
      <input type='text' id='name' name='name' placeholder='Your name (optional)' />

      <label for=''>Email:</label>
      <input type='email' id='email' name='email' placeholder='Your email address' required />

      <label for='message'>Message:</label>
      <textarea id='message' name='message' cols={40} rows={10} placeholder='The message you want to send' required>
      </textarea>

      <button type='submit'>Send</button>
    </form>
  </section>
</Layout>

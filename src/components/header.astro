---
import MenuButton from '@components/menu-button.astro';
import { Image } from 'astro:assets';

import logo from 'public/images/logo.png';
---

<style>
  header {
    position: fixed;
    top: 0.5rem;
    left: 0.5rem;
    right: 0.5rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.5rem 1.5rem;
    background: var(--primary-bg-color);
    z-index: 10;
    border-radius: var(--border-radius);
  }

  .logo {
    width: 10rem;
    height: auto;
    cursor: pointer;
  }

  header nav {
    display: none;
    position: absolute;
    top: .5rem;
    right: 0;
    left: 0;
    text-align: center;
    padding: 5rem 0;
    font-weight: 500;
    background-color: var(--primary-bg-color);
  }

  header nav a {
    display: block;
    font-size: 3rem;
    padding: 1rem;
    text-decoration: none;
    color: var(--secondary-color);
  }

  header nav a:hover {
    text-decoration: underline;
  }

  @media only screen and (min-width: 768px) {
    header {
      padding: 1rem;
    }

    header nav {
      display: block !important;
      position: static;
    }

    header nav a {
      display: inline-block;
      font-size: 2rem;
      padding: 0 0.5rem;
      margin: 0 0.25rem;
    }
  }
</style>

<header>
  <a href='/'><Image src={logo} alt='page logo' class='logo' /></a>

  <MenuButton />

  <nav>
    <a href='/'>Home</a>
    <a href='/about'>About</a>
    <a href='/contact'>Contact</a>
  </nav>
</header>
